            <!-- end footer xmr payment -->
            </div>
            <!-- end monero container payment box -->
      
	</div>

<script type="text/javascript"><!--
$('#button-confirm').on('click', function() {
      $.ajax({
            url: 'index.php?route=extension/payment/monero/confirm',
            dataType: 'json',
            beforeSend: function() {
                  $('#button-confirm').button('loading');
            },
            complete: function() {
                  $('#button-confirm').button('reset');
            },
            success: function(json) {
            $('.confirmedbox').html(json);
                  if (json['redirect']) {
                        location = json['redirect'];  
                  }
            },
            error: function(xhr, ajaxOptions, thrownError) {
                  $('.confirmedbox').html(thrownError);
                  alert("error" + thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
            }
      });
});
//--></script>
