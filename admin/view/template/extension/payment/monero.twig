{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
        <button type="submit" form="form-payment" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
            <h1>Monero Payment Gateway</h1>
            <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i>{{ entry_status }}</h3>
            </div>
            <div class="panel-body">
            <p> This = {{ settings }}
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-monero" class="form-horizontal">
            <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_monero_status" id="input-payment_monero_status" class="form-control">
                {% if payment_monero_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>                                                       
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-payment-monero-address"><span data-toggle="tooltip" title="Monero Address">{{ monero_address_text }}</span></label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_monero_address" value="{{ payment_monero_address }}" placeholder="{{ payment_monero_address }}" id="input-total" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="input-payment-monero-wallet-rpc-host"><span data-toggle="tooltip" title="Monero Wallet RPC">Monero Wallet RPC Host</span></label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_monero_wallet_rpc_host" value="{{ payment_monero_wallet_rpc_host }}" placeholder="{{ payment_monero_wallet_rpc_host }}" id="input-total" class="form-control" />
                        </div>
                    </div>

<div class="form-group">
                        <label class="col-sm-2 control-label" for="input-payment-monero-wallet-port"><span data-toggle="tooltip" title="Monero Wallet RPC port">Monero Wallet RPC Port</span></label>
                        <div class="col-sm-10">
                            <input type="text" name="payment_monero_wallet_rpc_port" value="{{ payment_monero_wallet_rpc_port }}" placeholder="18082" id="input-total" class="form-control" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }} 
